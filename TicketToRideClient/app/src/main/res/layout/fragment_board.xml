<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapContainer">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:enabled="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="#ffe8ce"
                android:background="#383838"
                android:textSize="14dp"
                android:id="@+id/pointsDisplay"/>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/trains"
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="#ffe8ce"
                android:background="#383838"
                android:textSize="14dp"
                android:id="@+id/trainDisplay"/>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/yourHand"
                android:textAlignment="center"
                android:textColor="#000000"
                android:background="#ffe3af"
                android:padding="8dp"
                android:textSize="14dp"
                android:id="@+id/yourHandBanner"/>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:id="@+id/yourHandDisplay">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainGreen"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerGreenCards"
                        android:layout_margin="10dp"
                        android:textColor="#000000"
                        android:textAlignment="center">
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainWhite"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerWhiteCards"
                        android:layout_margin="10dp"
                        android:textColor="#000000"
                        android:textAlignment="center">
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainYellow"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerYellowCards"
                        android:layout_margin="10dp"
                        android:textColor="#000000"
                        android:textAlignment="center">
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainWild"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerWildCards"
                        android:layout_margin="10dp"
                        android:textColor="#000000"
                        android:textAlignment="center">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainOrange"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerOrangeCards"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center">
                    </TextView>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainBlue"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerBlueCards"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center">
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainRed"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerRedCards"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center">
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainBlack"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerBlackCards"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center">
                    </TextView>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@color/trainPink"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/playerPinkCards"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff"
                        android:textAlignment="center">
                    </TextView>
                </LinearLayout>
            </LinearLayout>




            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/otherPlayers"
                android:textAlignment="center"
                android:textColor="#000000"
                android:background="#ffe3af"
                android:padding="8dp"
                android:textSize="14dp"
                android:id="@+id/otherPlayersBanner"/>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/otherPlayersRecyclerView"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:background="#ffffff"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>

        </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/availableCards"
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="#000000"
                android:background="#ffe3af"
                android:textSize="14dp"
                android:id="@+id/availableCardsBanner"/>

            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/availableCardsDisplay"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#2f6fd6"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Train Cards: #"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:id="@+id/trainCardsDeck"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#dbb930"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Destination Cards: #"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:id="@+id/destinationCardsDeck"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#8c26bf"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/faceUpCard1">
                    </View>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#8c26bf"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/faceUpCard2">
                    </View>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#8c26bf"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/faceUpCard3">
                    </View>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#8c26bf"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/faceUpCard4">
                    </View>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="#8c26bf"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:id="@+id/faceUpCard5">
                    </View>

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Whose turn: "
                    android:textAlignment="center"
                    android:layout_marginVertical="10dp"
                    android:textColor="#000000"
                    android:id="@+id/playersTurn"/>

                <View
                    android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="#000000"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/viewDestinations"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:background="#ffe3af"
                    android:id="@+id/viewYourDestinationCardsBanner"/>

                <View
                    android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="#000000"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <View
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="#000000"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/chatAndHistory"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:padding="13dp"
            android:textColor="#000000"
            android:background="#ffe3af"
            android:textSize="14dp"
            android:id="@+id/chatAndHistoryBanner"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/chatboxContainer">
            <View
                android:layout_height="1dp"
                android:layout_width="fill_parent"
                android:background="#000000"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="#ffffff"
                android:text="Oh hey, this is really cool"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/chatBox"
                android:maxLines="4"
                android:scrollbars="vertical"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:background="#cccccc">
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_gravity="left"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/typeMessageLine"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/submitMessageButton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>